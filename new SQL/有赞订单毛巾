/*
查询当日的毛巾.销量.
*/


SELECT  t.store_name,td.goods_name_onl,COUNT(DISTINCT t.id_onl) AS Gdnumber FROM  trade AS t 
LEFT JOIN trade_detail AS td ON t.id_onl = td.trade_id_onl
WHERE t.order_time >  '2019-04-12 00:00:00'   -- DATE_FORMAT(NOW(), '%Y-%m-%d 00:00:00')
AND td.goods_name_onl LIKE  "%毛巾%"
AND t.status >1 AND t.status < 9 
AND td.goods_name_onl NOT LIKE "测试%"
GROUP BY t.store_id_erp
ORDER BY  Gdnumber DESC





